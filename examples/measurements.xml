<?xml version="1.0"?>
<!--
Generates 100 configurations and computes and saves the propagator for each
configuration.
-->
<pyQCD>
  <lattice>
    <L>4</L>
    <T>8</T>
    <action>wilson</action>
    <beta>5.5</beta>
  </lattice>

  <simulation>
    <num_configs>100</num_configs>
    <measurement_spacing>10</measurement_spacing>
    <num_warmup_updates>50</num_warmup_updates>
    <verbosity>2</verbosity>
  </simulation>
  
  <measurements>    
    <propagator>
      <filename>propagators.zip</filename>
      <mass>0.4</mass>
      <!--
	  All the following parameters are optional
      -->
      <source_site>[0, 0, 0, 0]</source_site> <!-- Propagator start point -->
      <!-- Do some stout gauge field smearing -->
      <num_field_smears>2</num_field_smears> <!-- Default 0 -->
      <field_smearing_param>0.4</field_smearing_param> <!-- Default 0.0 -->
      <!-- Smear the source using Jacobi smearing -->
      <num_source_smears>2</num_source_smears> <!-- Default 0 -->
      <source_smearing_param>0.5</source_smearing_param> <!-- Default 0.0 -->
      <!-- And some sink smearing, again Jacobi -->
      <num_sink_smears>2</num_sink_smears> <!-- Default 0 -->
      <sink_smearing_param>0.5</sink_smearing_param> <!-- Default 0.0 -->
      <!-- Solver method (can use conjugate_gradient here) -->
      <solver_method>bicgstab</solver_method> <!-- Default bicgstab -->
    </propagator>

    <wilson_loops>
      <filename>wilson_loops.zip</filename>
      <!--
	  The following arguments are optional, with no smearing
	  being the default
      -->
      <num_field_smears>2</num_field_smears> <!-- Default 0 -->
      <field_smearing_param>0.4</field_smearing_param> <!-- Default 0.0 -->
    </wilson_loops>

    <configuration>
      <filename>configs.zip</filename>
    </configuration>
  </measurements>
</pyQCD>
