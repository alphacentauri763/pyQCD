<?xml version="1.0"?>
<!--
Runs a very basic simulation: no measurements, 100 configurations,
10 updates between each configuration, no parallel updates.

This time, the generated configurations are saved in the file configs.npz.
-->
<pyQCD>
  <lattice>
    <L>4</L>
    <T>8</T>
  </lattice>

  <simulation>
    <num_configurations>100</num_configurations>
    <measurement_spacing>10</measurement_spacing>
  </simulation>

  <gauge_action>
    <type>WILSON</type>
    <beta>5.5</beta>
  </gauge_action>
  
  <measurements>
    <configuration>
      <filename>configs</filename>
    </configuration>
  </measurements>
</pyQCD>
