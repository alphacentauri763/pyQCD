<?xml version="1.0"?>
<!--
Runs a very basic simulation: no measurements, 100 configurations,
10 updates between each configuration, no parallel updates.
-->
<pyQCD>
  <lattice>
    <L>4</L>
    <T>8</T>
    <action>wilson</action>
    <beta>5.5</beta>
    <!-- The following tag is optional and defaults to 1.0 -->
    <u0>1.0</u0>
  </lattice>

  <simulation>
    <num_configs>100</num_configs>
    <measurement_spacing>10</measurement_spacing>
    <num_warmup_updates>50</num_warmup_updates>
    <!-- The following tags are optional. The values below are the defaults. -->
    <update_method>heatbath</update_method>
    <run_parallel>True</run_parallel>
    <rand_seed>-1</rand_seed> <!-- Set the seed based on the time -->
    <verbosity>0</verbosity> <!-- Currently may also be 1 or 2 -->
  </simulation>
</pyQCD>
