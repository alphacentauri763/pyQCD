<?xml version="1.0"?>
<!--
Here the timing run tag is used to estimate the total time taken
to run the simulation.
-->
<pyQCD>
  <lattice>
    <L>4</L>
    <T>8</T>
  </lattice>

  <simulation>
    <num_configurations>100</num_configurations>
    <measurement_spacing>10</measurement_spacing>
    <num_warmup_updates>50</num_warmup_updates>
    <timing_run>
      <!-- Enable the timing run -->
      <enabled>TRUE</enabled>
      <!-- Specify 10 configurations to base our estimate on -->
      <num_configurations>10</num_configurations>
    </timing_run>
  </simulation>

  <gauge_action>
    <type>WILSON</type>
    <beta>5.5</beta>
  </gauge_action>
</pyQCD>