<?xml version="1.0"?>
<!--
Generates 100 configurations and computes and saves the propagator for each
configuration.
-->
<pyQCD>
  <lattice>
    <L>4</L>
    <T>8</T>
  </lattice>

  <simulation>
    <num_configurations>100</num_configurations>
    <measurement_spacing>10</measurement_spacing>
  </simulation>

  <gauge_action>
    <type>WILSON</type>
    <beta>5.5</beta>
  </gauge_action>
  
  <measurements>    
    <propagator>
      <filename>propagators.npz</filename>
      <mass>0.4</mass>
      <!--
	  All the following parameters are optional, with defaults defined
	  in pyQCD/interfaces/dicts.py
      -->
      <a>1.0</a> <!-- Lattice spacing (normally assume 1 and rescale later) -->
      <source_site>[0, 0, 0, 0]</source_site> <!-- Propagator start point -->
      <!-- Do some stout gauge field smearing -->
      <num_field_smears>2</num_field_smears>
      <field_smearing_param>0.4</field_smearing_param>
      <!-- Smear the source using Jacobi smearing -->
      <num_source_smears>2</num_source_smears>
      <source_smearing_param>0.5</source_smearing_param>
      <!-- And some sink smearing, again Jacobi -->
      <num_sink_smears>2</num_sink_smears>
      <sink_smearing_param>0.5</sink_smearing_param>
      <!-- Solver method (can use ConjugateGradient here) -->
      <solver_method>BiCGSTAB</solver_method>
    </propagator>
  </measurements>
</pyQCD>
