<?xml version="1.0"?>
<!--
Runs a very basic simulation: no measurements, 100 configurations,
10 updates between each configuration, no parallel updates.
-->
<pyQCD>
  <lattice>
    <L>4</L>
    <T>8</T>
  </lattice>

  <simulation>
    <!-- Load and perform measurements on an existing ensemble within the specified file -->
    <ensemble>configurations.npz</ensemble>
    <num_configurations>100</num_configurations>
    <measurement_spacing>10</measurement_spacing>
    <num_warmup_updates>0</num_warmup_updates>
  </simulation>

  <gauge_action>
    <type>WILSON</type>
    <beta>5.5</beta>
  </gauge_action>

  <measurements>
    <plaquette>
      <filename>plaquettes</filename>
    </plaquette>
  </measurements>
</pyQCD>
