<?xml version="1.0"?>
<!--
Runs a simulation, generating 1000 configuration, with 10 update configurations
in between. The plaquette expectation value is calculated for each configuration
and stored in the file plaquette_output.npy (a NumPy binary).
-->
<pyQCD>
  <lattice>
    <L></L>
    <T></T>
  </lattice>

  <simulation>
    <num_configurations></num_configurations>
    <measurement_spacing></measurement_spacing>
    <update_method>HEATBATH</update_method>
    <timing_run>
      <enabled>FALSE</enabled>
      <num_configurations>0</num_configurations>
    </timing_run>
    <parallel_update>
      <enabled>FALSE</enabled>
      <block_size>1</block_size>
    </parallel_update>
  </simulation>

  <gauge_action>
    <type></type>
    <beta></beta>
    <u0>1.0</u0>
  </gauge_action>

  <measurements>
    <plaquette>
      <filename></filename>
    </plaquette>

    <wilson_loop>
      <filename></filename>
      <r_max></r_max>
      <t_max></t_max>
      <num_field_smears>0</num_field_smears>
      <field_smearing_param>1.0</field_smearing_param>
    </wilson_loop>

    <propagator>
      <filename></filename>
      <mass></mass>
      <a>1.0</a>
      <source_site>[0, 0, 0, 0]</source_site>
      <solver_method>BiCGSTAB</solver_method>
      <num_source_smears>0</num_source_smears>
      <source_smearing_param>1.0</source_smearing_param>
      <num_sink_smears>0</num_sink_smears>
      <sink_smearing_param>1.0</sink_smearing_param>
      <num_field_smears>0</num_field_smears>
      <field_smearing_param>1.0</field_smearing_param>
    </propagator>
  </measurements>

  <postprocess>
    <auto_correlation>
      <input>
	<type></type>
	<filename></filename>
	<label>test</label>
	<linestyle>
	  <style>DASHED</style>
	  <colour>RED</colour>
	</linestyle>
      </input>
      <num_bootstraps>0</num_bootstraps>
      <bin_size>0</bin_size>
    </auto_correlation>

    <pair_potential>
      <input>
	<type></type>
	<filename></filename>
	<label>test</label>
	<linestyle>
	  <style>DASHED</style>
	  <colour>RED</colour>
	</linestyle>
      </input>
      <num_bootstraps>0</num_bootstraps>
      <bin_size>0</bin_size>
    </pair_potential>

    <lattice_spacing>
      <input>
	<type></type>
	<filename></filename>
	<label>test</label>
	<linestyle>
	  <style>DASHED</style>
	  <colour>RED</colour>
	</linestyle>
      </input>
      <num_bootstraps>0</num_bootstraps>
      <bin_size>0</bin_size>
    </lattice_spacing>
  </postprocess>
</pyQCD>